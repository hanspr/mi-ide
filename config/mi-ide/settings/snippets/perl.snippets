		<script src="/lib/gcalendar.js?version=$JSVER"></script>
		<script src="/lib/navigate.js?version=$JSVER"></script>
		<script src="/lib/validate.js?version=$JSVER"></script>
		<script src="/lib/jquery.min.js?version=$JSVER"></script>
		<body onload="addShadowMarkUp();">
		<form name="Forma" action="${2:action}" method="post" onsubmit="ShadowOn();">
		${0:formtext}
		•;
	}
	
	sub bottom {
		print qq·
		</form>
		</body>
		</html>
		·;
	}

snippet perle
	#!/usr/bin/perl

	use utf8;
	binmode STDOUT,':utf8';
	use Eflow::user_check;
	
	our (%in,$lib,$CMD,$EMP,$Emp,$CSS,$JSV);
	
	user_check();
	print PrintHeader();
	ReadParse();
	$lib=Libs->new();
	$lib->hash_decode(\%in);
	if ($in{'cmd'} =~ /^cmd_/) {
		$CMD=$in{'cmd'};
	}
	
	top();
	if(!$CMD){
		inicio();
	} elsif (exists &$CMD) {
		&$CMD;
	} else {
		inicio();
	}
	bottom();
	
	sub inicio {
		print "INICIO";
	}
	
	sub top {
		print qq·
		<!DOCTYPE html>
		<html>
		<head>
		<title>${1:}</title>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<link rel="stylesheet" type="text/css" href="/css/eflow.css?v=$CSS">
		<link rel="stylesheet" type="text/css" href="/css/gcalendar.css?v=$CSS">
		<script src="/lib/gcalendar.js?v=$JSV"></script>
		<script src="/lib/navigate.js?v=$JSV"></script>
		<script src="/lib/validate.js?v=$JSV"></script>
		<script src="/lib/jquery.min.js?v=$JSV"></script>
		<body onload="addShadowMarkUp();">
		<form name="Forma" action="${2:script}" method="post" onsubmit="ShadowOn();">
		${0:}
		·;
	}
	
	sub bottom {
		print qq·
		<input type="hidden" name="process" value="$in{'process'}">
		<input type="hidden" name="station" value="$in{'station'}">
		<input type="hidden" name="folio" value="$in{'folio'}">
		</form>
		</body>
		</html>
		·;
	}

