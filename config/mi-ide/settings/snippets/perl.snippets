
# Function
snippet func
	sub ${1:function_name} {
		${2:#code}
	}

# Conditional
snippet if
	if (${1:test}) {
		${2:# code}
	}

# Conditional if..else
snippet ifelse
	if (${1:test}) {
		${2:# code}
	} else {
		${3:# code}
	}

snippet try
	eval {
		${1:# do something risky...}
	};
	if ($@) {
		${2:# handle failure...}
	}

snippet for
	for (my $${1:var} = 0; $${1:var} < $${2:limit}; $${1:var}${3:++}) {
		${4:# code}
	}

snippet foreach
	foreach my $${1:v} (${2:array}) {
		${3:# code}
	}

snippet keys
	foreach my $${1:k} (keys %${2:hash}) {
		${3:# code}
	}

snippet perly
	#!/usr/bin/perl

	use utf8;
	binmode STDOUT,':utf8';
	use MicroERP::user_check;
	
	our (%in,$lib,$CMD,$EMP,$Emp,$CSSVER,$JSVER);
	
	user_check();
	print PrintHeader();
	ReadParse();
	$lib=Libs->new();
	$lib->hash_decode(\%in);
	if ($in{'cmd'} =~ /^cmd_/) {
		$CMD=$in{'cmd'};
	}
	
	top();
	if(!$CMD){
		inicio();
	} elsif (exists &$CMD) {
		&$CMD;
	} else {
		inicio();
	}
	bottom();
	
	sub inicio {
		print "INICIO";
	}
	
	sub top {
		print qq•
		<!DOCTYPE html>
		<html>
		<head>
		<title>${1:titulo}</title>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
